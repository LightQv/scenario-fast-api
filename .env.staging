# App Configuration
APP_NAME="Scenario API - Staging"
APP_VERSION="2.0.0"
APP_PORT=8000
DEBUG=false

# CORS Configuration
FRONTEND_URL="https://staging.scenario.yourdomain.com"
ALLOWED_ORIGINS=["https://staging.scenario.yourdomain.com"]

# Database Configuration
DATABASE_URL="postgresql://scenario_staging_user:scenario_staging_password@scenario-postgres:5432/scenario_staging_db"
POSTGRES_DB=scenario_staging_db
POSTGRES_USER=scenario_staging_user
POSTGRES_PASSWORD=scenario_staging_password
POSTGRES_HOST=host_staging

# JWT Configuration
JWT_SECRET_KEY="your_staging_super_secret_jwt_key_different_from_prod"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRES_IN=43200

# SMTP Configuration for emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASSWORD="your_app_password"
SMTP_USE_TLS=true

# Security Settings
PASSWORD_MIN_LENGTH=7
PASSWORD_MAX_LENGTH=30
USERNAME_MIN_LENGTH=5
USERNAME_MAX_LENGTH=30
